<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stepanenko.makemymood">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".EnergeticActivity"
            android:label="@string/energetic"
            android:parentActivityName="com.example.stepanenko.makemymood.MainActivity" />

        <activity
            android:name=".ExcitingActivity"
            android:label="@string/exciting"
            android:parentActivityName="com.example.stepanenko.makemymood.MainActivity" />

        <activity
            android:name=".ConcentratingActivity"
            android:label="@string/concentrating"
            android:parentActivityName="com.example.stepanenko.makemymood.MainActivity" />

        <activity
            android:name=".RelaxingActivity"
            android:label="@string/relaxing"
            android:parentActivityName="com.example.stepanenko.makemymood.MainActivity" />

        <activity
            android:name=".MelancholicActivity"
            android:label="@string/melancholic"
            android:parentActivityName="com.example.stepanenko.makemymood.MainActivity" />
    </application>

</manifest>